<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize3Percent." parent="">
        <item name="cornerSize">3%</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="detailsDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailMainDescription" parent="detailsDescription">
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="detailContentDescription" parent="detailsDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="progressBarStyleForContent" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">84dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="progressBarStyleWithMargin" parent="progressBarStyleForContent">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">84dp</item>
    </style>

    <style name="progressBarStyleWithoutMargin" parent="progressBarStyleForContent">
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
